<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_dimen">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/list_padding"
            android:textColor="@color/black"
            tools:text="@string/test"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/id_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/id_title"
            android:layout_toStartOf="@+id/id_more"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:padding="@dimen/list_padding"
            tools:text="@string/test" />


        <ImageView

            android:id="@+id/id_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/list_padding"
            android:src="@mipmap/spinner_bt1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/id_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_padding"
        android:background="@drawable/divider_line" />


</LinearLayout>