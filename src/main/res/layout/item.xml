<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:paddingStart="@dimen/list_padding">

    <ImageView
        android:id="@+id/id_imageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_dimen"
        android:layout_weight="1"
        android:padding="5dp"
        tools:src="@drawable/ic_settings_airplane_item" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:paddingStart="@dimen/list_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_dimen">

            <TextView
                android:id="@+id/id_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_dimen"

                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="@string/offline" />

            <ImageView
                android:paddingEnd="@dimen/list_padding"
                android:id="@+id/id_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@mipmap/spinner_bt1" />
        </LinearLayout>

        <ImageView
            android:paddingStart="@dimen/list_padding"

            android:id="@+id/id_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_line" />


    </LinearLayout>


</LinearLayout>